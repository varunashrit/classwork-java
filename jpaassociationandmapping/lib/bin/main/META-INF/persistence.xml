<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="jpaassociationandmapping">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>jpaassociationandmapping.onetoone.Address</class>
		<class>jpaassociationandmapping.onetoone.Student</class>
		<class>jpaassociationandmapping.bi.AddressBi</class>
		<class>jpaassociationandmapping.bi.StudentBi</class>
		<class>jpaassociationandmapping.onetomany.Department</class>
		<class>jpaassociationandmapping.onetomany.Employee</class>
		<class>jpaassociationandmapping.manytomany.Order</class>
		<class>jpaassociationandmapping.manytomany.Product</class>
		<class>jpaassociationandmapping.inheritance.tpc.EmployeeTPC</class>
		<class>jpaassociationandmapping.inheritance.tpc.ManagerTPC</class>
		<class>jpaassociationandmapping.inheritance.stc.ManagerSTC</class>
		<class>jpaassociationandmapping.inheritance.stc.EmployeeSTC</class>
		<class>jpaassociationandmapping.inheritance.js.EmployeeJS</class>
		<class>jpaassociationandmapping.inheritance.js.ManagerJS</class>
		
		
		
	
	<properties>
		<property name="javax.persistence.jdbc.driver"
			value="org.postgresql.Driver" />
		<property name="javax.persistence.jdbc.url"
			value="jdbc:postgresql://localhost:5432/varun" />
		<property name="javax.persistence.jdbc.user" value="postgres" />
		<property name="javax.persistence.jdbc.password" value="root" />
		<property
			name="javax.persistence.schema-generation.database.action"
			value="update" />
		<property name="hibernate.dialect"
			value="org.hibernate.dialect.PostgreSQL92Dialect" />
		<property name="hibernate.show_sql" value="true" />
	</properties>
		
	</persistence-unit>
</persistence>